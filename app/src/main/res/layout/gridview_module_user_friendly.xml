<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="#00000000"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:foreground="?ForegroundColour"

    android:foregroundGravity="left"
    android:orientation="vertical"
    android:padding="8dp"
    app:cardBackgroundColor="?ForegroundColour"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:layout_gravity="left">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="186dp">

        <ImageView
            android:id="@+id/backgroundGradient"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/placeholder_gradient"
            android:contentDescription="gradientViewer"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroundGradient">

            <TextView
                android:id="@+id/backgroundNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:text="Pebble"
                android:textColor="?PrimaryTextColour"
                android:textSize="18sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>