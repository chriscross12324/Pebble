<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/navigationHolder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/details_background"
        android:backgroundTint="?ForegroundColour"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/buttonOptions"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imageOptionsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/icon_close"
                android:backgroundTint="?SecondaryTextColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_search"
                android:tint="?PrimaryTextColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_settings"
                android:tint="?PrimaryTextColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonFeedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_feedback"
                android:tint="?PrimaryTextColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonReload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/reloadImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_reload"
                android:tint="?PrimaryTextColour" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>