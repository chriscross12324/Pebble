<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="horizontal"
    tools:context=".GradientsScreen">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/placeholder_gradient_dark"
                android:contentDescription="@string/descriptionBackground" />

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/connectingDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="24dp"
                android:alpha="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/connectingDialogTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="@string/connectingDialogTitle"
                        android:textAlignment="center"
                        android:textColor="?PrimaryTextColour"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/connectingDialogBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/googlesans_regular"
                        android:text="@string/connectingDialogBody"
                        android:textAlignment="center"
                        android:textColor="?PrimaryTextColour"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/animationView"
                        android:layout_width="100dp"
                        android:layout_height="56.2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/loading_animation"
                        android:backgroundTint="?PrimaryTextColour"
                        android:contentDescription="@string/descriptionAnimation"
                        android:tint="?PrimaryTextColour" />

                </LinearLayout>
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/titleHolder"
                android:layout_width="120px"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="PxUsage">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/descriptionDecoration"
                    android:tint="?PrimaryTextColour"
                    app:layout_constraintBottom_toTopOf="@+id/title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@color/colorLightThemeForeground" />

                <ImageView
                    android:id="@+id/title"
                    android:layout_width="120px"
                    android:layout_height="660px"
                    android:background="@drawable/gradients_title"
                    android:backgroundTint="?PrimaryTextColour"
                    android:contentDescription="@string/descriptionTitleGradients"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/imageView8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView9"
                    tools:ignore="PxUsage" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:contentDescription="@string/descriptionDecoration"
                    android:tint="?PrimaryTextColour"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    app:srcCompat="@color/colorLightThemeForeground" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeToRefresh"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/featuredTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="32dp"
                            android:fontFamily="@font/googlesans_bold"
                            android:text="Featured"
                            android:textColor="?PrimaryTextColour"
                            android:textSize="36sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/featuredGradients"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/featuredTitle" />

                        <TextView
                            android:id="@+id/browseTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/googlesans_bold"
                            android:text="Browse"
                            android:textColor="?PrimaryTextColour"
                            android:textSize="36sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/featuredGradients" />

                        <com.simple.chris.pebble.ExpandedHeightScrollView
                            android:id="@+id/gv_items"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:horizontalSpacing="20dp"
                            android:numColumns="2"
                            android:overScrollMode="never"
                            android:paddingStart="30dp"
                            android:paddingTop="24dp"
                            android:paddingEnd="30dp"
                            android:paddingBottom="32dp"
                            android:scrollbars="none"
                            android:verticalSpacing="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/browseTitle" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </ScrollView>


            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <eightbitlab.com.blurview.BlurView
        android:visibility="visible"
        android:id="@+id/changelogBlur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        app:blurOverlayColor="?BlurColour" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/changelogHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/pebbleLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_pebble_foreground" />

        <TextView
            android:id="@+id/pebbleTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/googlesans_medium"
            android:gravity="center"
            android:text="@string/pebble"
            android:textColor="?SecondaryTextColour"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/pebbleLogo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dividerOne"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="?DetailsDividerColour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pebbleLogo" />

        <TextView
            android:id="@+id/updatedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/googlesans_medium"
            android:text="Pebble Updated!!!"
            android:textColor="?PrimaryTextColour"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerOne" />

        <TextView
            android:id="@+id/updatedBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:text="Here are the latest changes to Pebble."
            android:textColor="?SecondaryTextColour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updatedTitle" />

        <ImageView
            android:id="@+id/dividerTwo"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="?DetailsDividerColour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updatedBody" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerTwo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:text="August 13, 2019"
                    android:textColor="?PrimaryTextColour"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/newBadge"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date"
                    app:srcCompat="@drawable/icon_changelog_new" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:gravity="center"
                    android:text="1.0.0-beta.3"
                    android:textColor="?SecondaryTextColour"
                    app:layout_constraintStart_toEndOf="@+id/newBadge"
                    app:layout_constraintTop_toBottomOf="@+id/date" />

                <ImageView
                    android:id="@+id/dotOne"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/newBadge" />

                <TextView
                    android:id="@+id/newOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Added Splash Screen when opening app"
                    android:textAlignment="viewStart"
                    android:textColor="?SecondaryTextColour"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/dotOne"
                    app:layout_constraintTop_toBottomOf="@+id/newBadge" />

                <ImageView
                    android:id="@+id/dotTwo"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/newOne" />

                <TextView
                    android:id="@+id/newTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Added Gradient Details screen; just tap a module"
                    android:textAlignment="viewStart"
                    android:textColor="?SecondaryTextColour"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/dotTwo"
                    app:layout_constraintTop_toBottomOf="@+id/newOne" />

                <ImageView
                    android:id="@+id/changedBadge"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/newTwo"
                    app:srcCompat="@drawable/icon_changelog_changed" />

                <ImageView
                    android:id="@+id/dotThree"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/changedBadge" />

                <TextView
                    android:id="@+id/changedOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Updated the design of data/no connection\nscreens"
                    android:textAlignment="viewStart"
                    android:textColor="?SecondaryTextColour"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/dotThree"
                    app:layout_constraintTop_toBottomOf="@+id/changedBadge" />

                <ImageView
                    android:id="@+id/dotFour"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/changedOne" />

                <TextView
                    android:id="@+id/changedTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Changed the way animations work"
                    android:textAlignment="viewStart"
                    android:textColor="?SecondaryTextColour"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/dotFour"
                    app:layout_constraintTop_toBottomOf="@+id/changedOne" />

                <ImageView
                    android:id="@+id/dotFive"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/changedTwo" />

                <TextView
                    android:id="@+id/changedThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Fixed an issue where the 'Wi-Fi' and 'Data'\nscreens would show everytime the app\nwas opened"
                    android:textAlignment="viewStart"
                    android:textColor="?SecondaryTextColour"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/dotFive"
                    app:layout_constraintTop_toBottomOf="@+id/changedTwo" />

                <ImageView
                    android:id="@+id/dotSix"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/changedThree" />

                <TextView
                    android:id="@+id/changedFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Fixed an issue with some UI Elements"
                    android:textAlignment="viewStart"
                    android:textColor="?SecondaryTextColour"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/dotSix"
                    app:layout_constraintTop_toBottomOf="@+id/changedThree" />

                <ImageView
                    android:id="@+id/dotSeven"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/changedFour" />

                <TextView
                    android:id="@+id/changedFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Updated app icon"
                    android:textAlignment="viewStart"
                    android:textColor="?SecondaryTextColour"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/dotSeven"
                    app:layout_constraintTop_toBottomOf="@+id/changedFour" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/hideChangelogButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_dialog_permission"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/googlesans_medium"
                android:text="Got it!"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connectionNotification"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:alpha="0"
        android:background="@drawable/details_background"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/connectionStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/googlesans_medium"
            android:text="It's taking a bit longer than usual"
            android:gravity="center"
            android:textColor="?SecondaryTextColour"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/copiedIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/copiedIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:tint="?SecondaryTextColour"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_error" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>