<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:layout_margin="8dp"
    android:background="#00ffffff"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:foregroundGravity="left"
    android:orientation="vertical"
    android:padding="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:layout_gravity="left">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightThemeForeground">

        <ImageView
            android:id="@+id/backgroundGradient"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:background="#76E646"
            app:layout_constraintBottom_toTopOf="@+id/backgroundName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/backgroundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/googlesans_medium"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="Deep"
            android:textColor="@color/colorLightThemeTextColour"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroundGradient"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>