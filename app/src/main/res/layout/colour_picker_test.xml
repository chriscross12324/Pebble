<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#257CEF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/colour_picker_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans_bold"
                android:text="Select"
                android:textColor="?PrimaryTextColour"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/googlesans_medium"
                android:text=" Colour"
                android:textColor="?PrimaryTextColour"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/multiGradient"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:background="#63ACE4"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

        <ImageView
            android:id="@+id/saturation"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:background="#63ACE4"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout3"
            app:layout_constraintTop_toTopOf="@+id/linearLayout3" />

        <ImageView
            android:id="@+id/value"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:background="#63ACE4"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toTopOf="@+id/linearLayout4" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/details_background"
            android:backgroundTint="?ForegroundColour"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <EditText
                android:id="@+id/hueText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/googlesans_medium"
                android:hint="H"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:text="214"
                android:textAlignment="center"
                android:textColor="?PrimaryTextColour"
                android:textColorHint="?SecondaryTextColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/details_background"
            android:backgroundTint="?ForegroundColour"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="end"
                android:text="%"
                android:textColor="?BTTBBackground"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/satText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_weight="0.75"
                android:background="@android:color/transparent"
                android:fontFamily="@font/googlesans_medium"
                android:hint="S"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:text="85"
                android:textAlignment="center"
                android:textColor="?PrimaryTextColour"
                android:textColorHint="?SecondaryTextColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/details_background"
            android:backgroundTint="?ForegroundColour"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="end"
                android:text="%"
                android:textColor="?BTTBBackground"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/valText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_weight="0.75"
                android:background="@android:color/transparent"
                android:fontFamily="@font/googlesans_medium"
                android:hint="V"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:text="94"
                android:textAlignment="center"
                android:textColor="?PrimaryTextColour"
                android:textColorHint="?SecondaryTextColour" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/hueSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="360"
            android:padding="0dp"
            android:progress="214"
            android:progressDrawable="@drawable/empty_shape"
            android:splitTrack="false"
            android:thumb="@drawable/colour_picker_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/multiGradient"
            app:layout_constraintEnd_toEndOf="@+id/multiGradient"
            app:layout_constraintStart_toStartOf="@+id/multiGradient"
            app:layout_constraintTop_toTopOf="@+id/multiGradient" />

        <SeekBar
            android:id="@+id/saturationSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:padding="0dp"
            android:progress="85"
            android:progressDrawable="@drawable/empty_shape"
            android:splitTrack="false"
            android:thumb="@drawable/colour_picker_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/saturation"
            app:layout_constraintEnd_toEndOf="@+id/saturation"
            app:layout_constraintStart_toStartOf="@+id/saturation"
            app:layout_constraintTop_toTopOf="@+id/saturation" />

        <SeekBar
            android:id="@+id/valueSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:padding="0dp"
            android:progress="94"
            android:progressDrawable="@drawable/empty_shape"
            android:splitTrack="false"
            android:thumb="@drawable/colour_picker_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/value"
            app:layout_constraintEnd_toEndOf="@+id/value"
            app:layout_constraintStart_toStartOf="@+id/value"
            app:layout_constraintTop_toTopOf="@+id/value" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/details_background"
            android:backgroundTint="#3a76f0"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="center"
                android:text="Save"
                android:textColor="?BackgroundColour"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/details_background"
            android:backgroundTint="?ForegroundColour"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="center"
                android:text="@string/text_eng_cancel"
                android:textColor="?SecondaryTextColour"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/hexValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/googlesans_bold"
        android:text="#3a76f0"
        android:textColor="#ffffff"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>