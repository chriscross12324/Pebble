<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?BackgroundColour"
    android:animateLayoutChanges="true">

    <View
        android:id="@+id/navigationMenuPlacementHolder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/helloText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/helloText"/>

    <LinearLayout
        android:id="@+id/navigationHolder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/navigationMenuPlacementHolder"
        app:layout_constraintStart_toStartOf="@+id/navigationMenuPlacementHolder"
        app:layout_constraintTop_toTopOf="@+id/navigationMenuPlacementHolder"
        android:background="@drawable/details_background"
        android:backgroundTint="?ForegroundColour"
        android:clickable="true"
        android:focusable="true">
        <LinearLayout
            android:id="@+id/buttonOptions"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imageOptionsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/icon_menu"
                android:backgroundTint="?SecondaryTextColour"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible">
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_search"
                android:tint="?PrimaryTextColour"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_settings"
                android:tint="?PrimaryTextColour"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonFeedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_feedback"
                android:tint="?PrimaryTextColour"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonReload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible">
            <ImageView
                android:id="@+id/reloadImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_reload"
                android:tint="?PrimaryTextColour"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/helloText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/googlesans_bold"
        android:text="Hello,\nchriscross12324"
        android:textColor="?PrimaryTextColour"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createGradientBanner"
        android:transitionName="gradientCreatorViewer"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/placeholder_gradient"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helloText">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/createGradientDetailsHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/create_gradient_banners"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/googlesans_medium"
                android:text="Create a"
                android:textColor="@color/lightBackground"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/googlesans_bold"
                android:text="Gradient"
                android:textColor="@color/lightBackground"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:elevation="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?BackgroundColour"
            android:transitionName="cardView"
            app:cardBackgroundColor="?BackgroundColour"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/browseGrid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:fadingEdge="none"
                    android:requiresFadingEdge="none"
                    android:visibility="visible"
                    app:layout_anchor="@+id/bottomSheet"
                    app:layout_anchorGravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--<eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="#99000000"/>-->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:id="@+id/touchBlockerMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="11dp"
        android:background="#4A000000" />

    <View
        android:id="@+id/touchBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="21dp" />

    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="9dp"
        app:blk_blurRadius="10"
        android:visibility="gone"
        app:blk_fps="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>