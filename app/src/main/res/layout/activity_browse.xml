<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?ForegroundColour"
    android:animateLayoutChanges="true">


    <LinearLayout
        android:id="@+id/buttonOpenOptions"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_background"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4"/>

    <LinearLayout
        android:id="@+id/optionsHolder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/buttonOpenOptions"
        app:layout_constraintStart_toStartOf="@+id/buttonOpenOptions"
        app:layout_constraintTop_toTopOf="@+id/buttonOpenOptions"
        android:background="@drawable/button_background"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:id="@+id/buttonOptions"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imageOptionsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/icon_apps"
                android:backgroundTint="?SecondaryTextColour"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_search"
                android:tint="?PrimaryTextColour"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_settings"
                android:tint="?PrimaryTextColour"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonReload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/icon_reload"
                android:tint="?PrimaryTextColour"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/googlesans_bold"
        android:text="Hello,\nchriscross12324"
        android:textColor="?PrimaryTextColour"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?BackgroundColour"
            android:transitionName="cardView"
            app:cardBackgroundColor="?ForegroundColour"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/browseGrid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:fadingEdge="vertical"
                    android:requiresFadingEdge="vertical"
                    android:visibility="visible"
                    app:layout_anchor="@+id/bottomSheet"
                    app:layout_anchorGravity="center" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>