<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/buttonIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10.5dp"
            android:layout_marginTop="8.5dp"
            android:layout_marginBottom="10.5dp"
            android:layout_weight="1"
            android:src="@drawable/icon_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="?PrimaryTextColour" />

        <TextView
            android:id="@+id/buttonText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_bold"
            android:gravity="start"
            android:text="Settings"
            android:textColor="?PrimaryTextColour"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonIcon"
            app:layout_constraintStart_toEndOf="@+id/buttonIcon"
            app:layout_constraintTop_toTopOf="@+id/buttonIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/listDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/details_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"
        android:backgroundTint="?ForegroundColour" />


</androidx.constraintlayout.widget.ConstraintLayout>