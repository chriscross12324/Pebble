<resources>

    <!-- Base application theme. -->
    <style name="Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/new_activity_transition</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="ThemeLight" parent="Main">
        <item name="BackgroundColour">@color/lightBackground</item>
        <item name="ForegroundColour">@color/lightForeground</item>
        <item name="PrimaryTextColour">@color/lightTextPrimary</item>
        <item name="SecondaryTextColour">@color/lightTextSecondary</item>
    </style>

    <style name="ThemeDark" parent="Main">
        <item name="BackgroundColour">@color/darkBackground</item>
        <item name="ForegroundColour">@color/darkForeground</item>
        <item name="PrimaryTextColour">@color/darkTextPrimary</item>
        <item name="SecondaryTextColour">@color/darkTextSecondary</item>
    </style>

    <style name="ThemeBlack" parent="Main">
        <item name="BackgroundColour">@color/blackBackground</item>
        <item name="ForegroundColour">@color/blackForeground</item>
        <item name="PrimaryTextColour">@color/blackTextPrimary</item>
        <item name="SecondaryTextColour">@color/blackTextSecondary</item>
    </style>

    <style name="LoginScreenEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#80FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="ThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="verticalTextStyle"
        parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="splashTheme" parent="Main">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>



</resources>
